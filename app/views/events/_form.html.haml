
%td{colspan: 6}
= form_for object, url: object.new_record? ? events_path : event_path(object), remote: true, html: {class: "form-horizontal"} do |f|
  %form
    = label :event, :description
    = text_field :event, :description
    = f.submit "Save", class: "btn btn-primary"
    %button.btn.btn-link.cancel Cancel
